<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverProfile"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_person">
    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/driverName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deema Hanna"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/driverEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="placeholder@email.com"
        android:textAlignment="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dark_heart"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </Space>

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dark_heart"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </Space>

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dark_heart"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </Space>

        <ImageView
            android:id="@+id/heart4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/light_heart"/>

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </Space>

        <ImageView
            android:id="@+id/heart5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/light_heart"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp">
    </Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="95dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Languages:   "
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_language"/>

        <TextView
            android:id="@+id/driverLanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="French &amp; English" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp">
    </Space>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="95dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Date Joined: "
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_date"/>

        <TextView
            android:id="@+id/driverDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="September 2021" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp">
    </Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="95dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Location:       "
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_location"/>

        <TextView
            android:id="@+id/driverLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New York" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </Space>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Other Notes:"/>

    <EditText
        android:id="@+id/driverNotes"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:inputType="text|textMultiLine"
        android:background="@drawable/rectangle_outline"
        android:layout_marginTop="15dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp">
    </Space>

    <Button
        android:id="@+id/driver_homeB"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ff5c6c"
        android:textColor="@color/white"
        android:text="Back to Home"/>
</LinearLayout>